<div class="container-fluid">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h2>Edit Listing</h2>
			<%= form_for(@listing, class: 'form-horizontal') do |u| %>
				<fieldset>
					<div class = "form-group">	
						<%= u.label :name %>
						<%= u.text_field :name, class: "form-control"  %>	
					</div>
					
					<div class = "form-group">	
						<%= u.label :image %>
						<%= u.text_field :image, class: "form-control"  %>	
					</div>

					<div class = "form-group">	
						<%= u.label :youtube_link %>
						<%= u.text_field :youtube_link, class: "form-control"  %>	
					</div>

					<div class = "form-group">	
						<%= u.label :address %>
						<%= u.text_field :address, class: "form-control"  %>	
					</div>

					<div class = "form-group">	
						<%= u.label :city %>
						<%= u.text_field :city, class: "form-control"  %>	
					</div>

					<div class = "form-group">	
						<%= u.label :state %>
						<%= u.text_field :state, class: "form-control"  %>	
					</div>

					<div class = "form-group">	
						<%= u.label :zip %>
						<%= u.text_field :zip, class: "form-control"  %>	
					</div>

					<div class = "form-group">	
						<%= u.label :price %>
						<%= u.text_field :price, class: "form-control"  %>	
					</div>


					<div class = "form-group">	
						<%= u.label :short_description %>
						<%= u.text_area :short_description, class: "form-control"  %>	
					</div>

					<div class = "form-group">	
						<%= u.label :description %>
						<%= u.text_area :description, class: "form-control"  %>	
					</div>

					<div class = "form-group">	
						<%= u.label :show_in_slidshow %>
						<%= u.check_box :show_in_slidshow  %>	
					</div>

					<div class = "form-group">	
						<%= u.label :featured_listing %>
						<%= u.check_box :featured_listing  %>	
					</div>

					<div class = "form-group">	
						<%= u.label :display %>
						<%= u.check_box :display  %>	
					</div>

					<div class = "form-group">	
						<%= u.label :sold %>
						<%= u.check_box :sold  %>	
					</div>
										
					<div class = "form-group">
						<%= u.submit(class: "btn btn-primary btn-sm") %>
					</div>
				</fieldset>
			<% end %> 
		</div>
	</div>
</div>



